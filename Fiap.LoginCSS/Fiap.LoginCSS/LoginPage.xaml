<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fiap.LoginCSS.LoginPage" Style="{StaticResource ContentPageDefault}" 
             NavigationPage.HasNavigationBar="False" >
    <ContentPage.Content>
        <Frame>
            <StackLayout Style="{StaticResource StackDefault}">
                <Image Source="icon.png" />                
                <Entry Style="{StaticResource EntryDefault}" Placeholder="Email"/>
                <Entry Style="{StaticResource EntryDefault}" Placeholder="Senha" IsPassword="True"/>                
                <Button Text="Entrar" />
                <Label Text=""></Label>
                <Button Text="Scannear Acesso" Style="{StaticResource ButtonSecondary}" />
            </StackLayout>
        </Frame>
    </ContentPage.Content>
</ContentPage>